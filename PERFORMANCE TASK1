#include<iostream>
using namespace std;

int main(){


int number;
    
    char bu;
   
   do
   {1
    printf("Enter a Number: ");
    scanf("%d", &number);

    
    if(number % 2 == 0)
        printf("\n%d is EVEN NUMBER.", number);
    else
        printf("\n%d is ODD NUMBER.", number);

    // 
    cout << "\n---------------------------" << endl;
    cout << " \nTRY ANOTHER NUMBER? [C] : ";
    cin >> bu;

       
   } while ( bu == 'c'|| bu == 'C');
   
   


    return 0;
}
